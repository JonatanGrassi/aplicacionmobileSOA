<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Activity_inicio_app">

  <TextView
      android:id="@+id/textView"
      android:layout_width="243dp"
      android:layout_height="83dp"
      android:text="Seleccione un tipo de local"
      android:textAlignment="center"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.058" />

  <Button
      android:id="@+id/buttonAceptar"
      android:layout_width="156dp"
      android:layout_height="51dp"
      android:text="aceptar"
      app:cornerRadius="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.927" />

  <EditText
      android:id="@+id/editTextNombreLocal"
      android:layout_width="329dp"
      android:layout_height="52dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:text="Ingrese Nombre de local"
      app:layout_constraintBottom_toTopOf="@+id/buttonAceptar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.402"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      app:layout_constraintVertical_bias="0.539" />

  <EditText
      android:id="@+id/editTextMetrosCuadrados"
      android:layout_width="329dp"
      android:layout_height="52dp"
      android:ems="10"
      android:inputType="number"
      android:text="Ingrese Metros cuadrados de su local"
      app:layout_constraintBottom_toTopOf="@+id/buttonAceptar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.402"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      app:layout_constraintVertical_bias="0.727" />

  <RadioGroup
      android:layout_width="288dp"
      android:layout_height="176dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.268"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.287">

    <RadioButton
        android:id="@+id/radButtonRestaurante"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:text="Restaurant" />

    <RadioButton
        android:id="@+id/radButtonDiscoteca"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:text="Discoteca" />

    <RadioButton
        android:id="@+id/radButtonEstadios"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Estadio" />

  </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>